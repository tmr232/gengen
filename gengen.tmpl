{{define "function"}}
    func {{.Name}}{{trimPrefix .Signature "func"}} {
        {{range $name, $type := .State}}
            var {{$name}} {{$type}}
        {{end}}
        __next := 0
        return &gengen.GeneratorFunction[{{.ReturnType}}]{
            Advance: func() (__hasValue bool, __value {{.ReturnType}}, __err error) {
        // This should all be generated using a state-manager class.
                switch __next {
                {{range .StateIndices}}
                case {{.}}:
                    goto {{template "next" .}}
                {{end}}
                }
                {{template "next" 0}}:

                {{.Body}}
            },
        }
    }
{{end}}

{{define "return"}}
    __err = {{.ReturnValue}}
    return
{{end}}

{{define "yield"}}
{{/*TODO: Add state and state labels!*/}}
    __hasValue = true
    __value = {{.YieldValue}}
    __next = {{.Next}}
    return

{{template "next" .Next}}:
{{end}}


{{define "forever"}}
    __Loop{{.Loop}}:
    {{.Body}}
    goto __Loop{{.Loop}}
{{end}}

{{define "next"}}
__Next{{.}}
